# CultivateCo Cannabis Business Platform - Netlify Redirects

# SPA routing - catch all routes and serve index.html
/*    /index.html   200

# Authentication redirects
/login    /auth/signin    302
/signup   /auth/signup    302

# Cannabis business app routes
/app/*    /app/index.html    200

# API redirects
/api/cannabis/*    https://api.cultivateco.com/:splat    200
/api/metrc/*       https://api-ca.metrc.com/:splat       200

# Compliance and verification
/verify-age        /auth/age-verification    302
/compliance/*      /app/compliance/:splat    301

# Cannabis governance map
/cannabis-map      /cannabis-map/index.html    200

# Legacy route redirects
/dashboard         /app    301
/inventory         /app/inventory    301
/customers         /app/customers    301
/orders            /app/orders       301
/staff             /app/staff        301
/vendors           /app/vendors      301
/reports           /app/reports      301
/settings          /app/settings     301

# Error pages
/404               /404.html    404
/500               /500.html    500
