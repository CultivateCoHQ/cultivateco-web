# =============================================================================
# CultivateCo Cannabis Marketing Website - Environment Variables
# =============================================================================

# Next.js Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=https://cultivateco.com
NEXT_PUBLIC_APP_NAME="CultivateCo"
NEXT_PUBLIC_APP_DESCRIPTION="Cannabis Compliance Platform & Dispensary Technology"

# =============================================================================
# MAPBOX CONFIGURATION (Interactive Cannabis Governance Map)
# =============================================================================

# Mapbox Access Token for Cannabis Governance Map
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=pk.your_mapbox_token_here

# Mapbox Style URLs for Cannabis Industry Branding
NEXT_PUBLIC_MAPBOX_STYLE_URL=mapbox://styles/cultivateco/cannabis-governance
NEXT_PUBLIC_MAPBOX_FALLBACK_STYLE=mapbox://styles/mapbox/light-v11

# Map Configuration
NEXT_PUBLIC_MAP_DEFAULT_ZOOM=4
NEXT_PUBLIC_MAP_DEFAULT_CENTER_LAT=39.5
NEXT_PUBLIC_MAP_DEFAULT_CENTER_LNG=-98.35
NEXT_PUBLIC_MAP_MAX_ZOOM=10
NEXT_PUBLIC_MAP_MIN_ZOOM=3

# =============================================================================
# CULTIVATECO API CONFIGURATION
# =============================================================================

# CultivateCo Platform API
CULTIVATECO_API_URL=https://api.cultivateco.com
CULTIVATECO_API_KEY=your_api_key_here
CULTIVATECO_API_VERSION=v1

# Cannabis Compliance Engine API
CANNABIS_COMPLIANCE_API_URL=https://compliance.cultivateco.com
CANNABIS_COMPLIANCE_API_KEY=your_compliance_key_here

# Cannabis Analytics API
CANNABIS_ANALYTICS_API_URL=https://analytics.cultivateco.com
CANNABIS_ANALYTICS_KEY=your_analytics_key_here

# =============================================================================
# CANNABIS REGULATORY APIS
# =============================================================================

# METRC (Cannabis Track and Trace) Configuration
METRC_API_ENDPOINT=https://api-nm.metrc.com
METRC_API_KEY=your_metrc_api_key_here
METRC_VENDOR_KEY=your_metrc_vendor_key_here
METRC_USER_KEY=your_metrc_user_key_here

# New Mexico Cannabis Control Division API
NM_CANNABIS_API_URL=https://api.nmhealth.org/cannabis
NM_CANNABIS_API_KEY=your_nm_api_key_here

# Cannabis Compliance Data Sources
CANNABIS_COMPLIANCE_DATA_URL=https://data.cultivateco.com/compliance
CANNABIS_LEGALIZATION_DATA_URL=https://data.cultivateco.com/legalization

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================

# Google Analytics for Cannabis Marketing
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Tag Manager for Cannabis Compliance Tracking
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Hotjar for Cannabis User Experience Analytics
NEXT_PUBLIC_HOTJAR_ID=your_hotjar_id_here

# Intercom for Cannabis Customer Support
NEXT_PUBLIC_INTERCOM_APP_ID=your_intercom_app_id_here

# HubSpot for Cannabis Lead Management
HUBSPOT_API_KEY=your_hubspot_api_key_here
HUBSPOT_PORTAL_ID=your_hubspot_portal_id_here

# =============================================================================
# EMAIL AND COMMUNICATION
# =============================================================================

# SendGrid for Cannabis Marketing Emails
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=hello@cultivateco.com
SENDGRID_FROM_NAME=CultivateCo Team

# Twilio for Cannabis SMS Notifications
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# FORM HANDLING AND LEAD GENERATION
# =============================================================================

# Netlify Forms Configuration
NEXT_PUBLIC_NETLIFY_FORMS_ENABLED=true

# Contact Form Recipients
CANNABIS_CONTACT_EMAIL=contact@cultivateco.com
CANNABIS_SALES_EMAIL=sales@cultivateco.com
CANNABIS_SUPPORT_EMAIL=support@cultivateco.com
CANNABIS_COMPLIANCE_EMAIL=compliance@cultivateco.com

# Lead Generation Webhooks
CANNABIS_LEAD_WEBHOOK_URL=https://hooks.cultivateco.com/leads
CANNABIS_DEMO_WEBHOOK_URL=https://hooks.cultivateco.com/demos

# =============================================================================
# CONTENT MANAGEMENT
# =============================================================================

# Cannabis Blog and Resources API
CANNABIS_CONTENT_API_URL=https://content.cultivateco.com
CANNABIS_CONTENT_API_KEY=your_content_api_key_here

# Cannabis Case Studies and Testimonials
CANNABIS_TESTIMONIALS_API=https://testimonials.cultivateco.com
CANNABIS_CASE_STUDIES_API=https://case-studies.cultivateco.com

# =============================================================================
# FEATURE FLAGS AND CONFIGURATION
# =============================================================================

# Cannabis Marketing Feature Flags
NEXT_PUBLIC_CANNABIS_ANALYTICS_ENABLED=true
NEXT_PUBLIC_INTERACTIVE_MAP_ENABLED=true
NEXT_PUBLIC_COMPLIANCE_ALERTS_ENABLED=true
NEXT_PUBLIC_LEGALIZATION_PREDICTIONS_ENABLED=true
NEXT_PUBLIC_DISPENSARY_LOCATOR_ENABLED=true
NEXT_PUBLIC_LIVE_CHAT_ENABLED=true
NEXT_PUBLIC_DEMO_BOOKING_ENABLED=true

# Cannabis Compliance Configuration
CANNABIS_COMPLIANCE_MONITORING_ENABLED=true
CANNABIS_METRC_SYNC_ENABLED=true
CANNABIS_VIOLATION_ALERTS_ENABLED=true
CANNABIS_REGULATORY_UPDATES_ENABLED=true

# =============================================================================
# DEVELOPMENT AND DEBUGGING
# =============================================================================

# Development Configuration
NEXT_PUBLIC_DEBUG_MODE=false
CANNABIS_DEBUG_COMPLIANCE=false
CANNABIS_DEBUG_MAP=false
CANNABIS_VERBOSE_LOGGING=false

# Testing Configuration
CANNABIS_TEST_MODE=false
CANNABIS_MOCK_COMPLIANCE_DATA=false
CANNABIS_MOCK_METRC_DATA=false

# Performance Monitoring
NEXT_PUBLIC_PERFORMANCE_MONITORING=true
CANNABIS_ANALYTICS_TRACKING=true
CANNABIS_ERROR_REPORTING=true

# =============================================================================
# SECURITY AND AUTHENTICATION
# =============================================================================

# API Security
CANNABIS_API_RATE_LIMIT=1000
CANNABIS_API_TIMEOUT=30000
CANNABIS_API_RETRY_ATTEMPTS=3

# CORS Configuration
CANNABIS_ALLOWED_ORIGINS=https://cultivateco.com,https://www.cultivateco.com
CANNABIS_CORS_CREDENTIALS=true

# Session Configuration
CANNABIS_SESSION_SECRET=your_session_secret_here
CANNABIS_SESSION_TIMEOUT=3600000

# =============================================================================
# CANNABIS INDUSTRY SPECIFIC CONFIGURATION
# =============================================================================

# Cannabis Legal Status Updates
CANNABIS_LEGAL_STATUS_UPDATE_INTERVAL=3600000
CANNABIS_COMPLIANCE_CHECK_INTERVAL=300000
CANNABIS_METRC_SYNC_INTERVAL=900000

# Cannabis Market Data
CANNABIS_MARKET_DATA_REFRESH=86400000
CANNABIS_DISPENSARY_DATA_REFRESH=3600000
CANNABIS_LEGALIZATION_DATA_REFRESH=21600000

# Cannabis Compliance Thresholds
CANNABIS_COMPLIANCE_SCORE_THRESHOLD=85
CANNABIS_VIOLATION_ALERT_THRESHOLD=3
CANNABIS_INVENTORY_ALERT_THRESHOLD=10

# Cannabis Map Configuration
CANNABIS_MAP_REFRESH_INTERVAL=300000
CANNABIS_MAP_ANIMATION_DURATION=1000
CANNABIS_MAP_CLUSTER_RADIUS=50
CANNABIS_MAP_MAX_ZOOM_LEVEL=18
